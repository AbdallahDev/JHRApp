<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sarayrah.abdallah.jhrapp.AboutFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        app:tabMode="scrollable">

        <android.support.design.widget.TabItem
            android:id="@+id/tab1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="وظائف المجلس" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الدورات" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المكتب الدائم" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المكتب التنفيذي" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اللجان" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الجلسات" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الكتل والائتلافات" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مراحل عملية التشريع" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الحصانة البرلمانية" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الدبلوماسية البرلمانية" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp" />


</LinearLayout>
